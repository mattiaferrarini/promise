{
  "manifest_version": 2,
  "name": "Promise",
  "version": "1.0.3",
  "description": "Keep the promise of not visiting some websites.",
  "permissions": [
    "storage", "webRequest", "webRequestBlocking", "<all_urls>"
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },
  "web_accessible_resources": [
    "/pages/keep-your-promise.html"
  ],
  "applications": {
    "gecko": {
      "id": "promise@mattiaferrarini.com"
    }
  }
}